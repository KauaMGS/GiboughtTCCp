<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeact"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgHome"
    tools:context=".Class.HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgHome"
        app:layout_constraintBottom_toTopOf="@+id/bot_nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkGreen"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="2dp"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/typeMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/rs"
                        android:textColor="@color/colorBackgroundBanner"
                        android:textSize="30sp"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/total_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="2"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/money"
                        android:textColor="@color/colorBackgroundBanner"
                        android:textSize="38sp" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/visibleTotal"
                        android:layout_width="62dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:fontFamily="@font/roboto_regular"
                        android:src="@drawable/eyeoff"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtTotalMoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="20dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:fontFamily="@font/roboto_mediumitalic"
                        android:text="@string/total_balance"
                        android:textColor="@color/colorBackgroundBanner"
                        android:textSize="20sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">
                <!--Account-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/account_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBackgroundBanner"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/accountType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="16dp"
                                android:layout_weight="1"
                                android:text="@string/account"
                                android:textColor="@color/colorTextSecundary"
                                android:textSize="28sp"
                                />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/chooseBank"
                                android:layout_width="47dp"
                                android:layout_height="47dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/roundedbutton"
                                android:gravity="center"
                                android:text="@string/add_buttonadd"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            >
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imageBank"
                                android:layout_width="95dp"
                                android:layout_height="79dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/imageaccount"
                                android:src="@drawable/nonebank"
                                />
                               <LinearLayout
                                   android:layout_width="0dp"
                                   android:layout_weight="1"
                                   android:layout_height="wrap_content"
                                   android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/accountName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/account"
                                android:textColor="@color/colorFooter"
                                android:textSize="26sp" />

                                   <androidx.appcompat.widget.AppCompatTextView
                                       android:id="@+id/accountValueTot"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center"
                                       android:gravity="center"
                                       android:text="@string/account"
                                       android:textColor="@color/colorFooter"
                                       android:textSize="26sp" />
                               </LinearLayout>
                           </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Account End-->
                <!--Goals-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/goal_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBackgroundBanner"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="12dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@color/colorDarkGreen"
                            android:visibility="visible"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            >
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                >
                                <TextView
                                    android:id="@+id/resultTXT"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textColor="@color/colorWhite"
                                    android:fontFamily="@font/poppins"
                                    android:gravity="center"
                                    android:text="VocÃª tem x Ainda falta y"
                                    android:textSize="18sp" />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingBottom="10dp"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imagegoalHaveBank"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="59dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"

                                android:layout_gravity="center"
                                android:contentDescription="@string/imagegoal"
                                android:src="@drawable/goal"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/goalName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:layout_marginStart="25dp"
                                android:layout_weight="3"
                                android:text="@string/goal"
                                android:textColor="@color/colorTextSecundary"
                                android:textSize="28sp"
                                />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/choosegoalBank"
                                android:layout_width="47dp"
                                android:layout_height="47dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/roundedbutton"
                                android:gravity="center"
                                android:text="@string/add_buttonadd"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/nohaveGoal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            >

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imagegoalBank"
                                android:layout_width="95dp"
                                android:layout_height="79dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/imagegoal"
                                android:src="@drawable/goal"
                                />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/goalNotName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/not_have_goal"
                                android:layout_weight="1"
                                android:textColor="@color/colorFooter"
                                android:textSize="26sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/LinearProgressBar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:gravity="center"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="20sp"
                                android:layout_marginEnd="20sp"
                                >
                                <TextView
                                    android:id="@+id/actTXT"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:text="Conta:"
                                    />
                                <TextView
                                    android:id="@+id/actTxtValue"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Conta:"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="|"
                                    android:gravity="end"
                                    />
                                <TextView
                                    android:id="@+id/metaTXT"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="5dp"
                                    android:gravity="start"
                                    android:text="Valor:"
                                    />
                                <TextView
                                    android:id="@+id/metaTxtValue"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:text="Conta:"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                >

                                <ProgressBar
                                    android:id="@+id/progress"
                                    android:layout_margin="2dp"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:background="@color/colorDarkGrey"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    >
                                    <TextView
                                        android:id="@+id/progressText"
                                        android:text="@string/not_have_goal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:textColor="@color/colorWhite"
                                        android:gravity="center"
                                        />
                                </RelativeLayout>
                            </FrameLayout>
                        </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--Goals End-->
                <!--Recently-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/recently_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorBackgroundBanner"
                    android:layout_marginBottom="55dp"
                    android:padding="20dp"
                    app:cardCornerRadius="12dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/recentAdd"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="16dp"
                                android:layout_weight="1"
                                android:text="@string/recently_added"
                                android:textColor="@color/colorTextSecundary"
                                android:textSize="28sp"
                                />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:gravity="start"
                                android:text="@string/earnings"
                                android:layout_weight="2"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="22sp" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/eanRecently"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:gravity="end"
                                android:text="@string/money"
                                android:layout_weight="2"
                                android:textColor="@color/colorDarGreen"
                                android:textSize="20sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:gravity="start"
                                android:text="@string/spd"
                                android:layout_weight="2"
                                android:textColor="@color/colorRed"
                                android:textSize="22sp" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/spdRecently"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="10dp"
                                android:gravity="end"
                                android:text="@string/money"
                                android:layout_weight="2"
                                android:textColor="@color/colorDarRed"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--Recently End-->
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/btnAdc"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:src="@drawable/badd"
        android:elevation="2dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/bot_nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="lollipop"
        android:contentDescription="@string/app_name" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_m"
        app:elevation="0dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_navigation_menu"
        />
</androidx.constraintlayout.widget.ConstraintLayout>